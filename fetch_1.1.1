    <script>
      const $bookApiBtn = document.querySelector("#action");
      const $bookWrap = document.querySelector(".data-wrap");
      const $scrollTop = document.querySelector("[data-scroll='false']");

      window.onscroll = function() {scrollFunction()};

      function scrollFunction() {
        if($scrollTop.scrollTop > 20 ){
          $scrollTop.style.display = "black";
        } else{
          $scrollTop.style.display = "none";
